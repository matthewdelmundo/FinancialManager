<PopUpChooseEntry>:
    title: "Add Entry"
    size_hint: 0.8, None
    size: 0, 200

    BoxLayout:
        orientation: "vertical"
        spacing: 10
        padding: 10

        Button:
            text: "Income"
            on_release: root.choose_income()

        Button:
            text: "Expense"
            on_release: root.choose_expense()

<IncomeAmountInput@AmountInput>
    foreground_color: 0.75, 0.86, 0.57, 1
    cursor_color: 0.75, 0.86, 0.57, 1
    background_color: 0.22, 0.48, 0.3, 1
    hint_text_color: 0.47, 0.75, 0.39, 1
    multiline: False
    focus: True
    input_type: "number"

<PopupAddIncome>
    title: "Add Income"
    size_hint: 0.8, None
    size: 0, 250
    on_dismiss: root.reset_inputs()

    RelativeLayout:
        IncomeAmountInput:
            id: entry_amount
            size_hint: 0.9, 0.38
            pos_hint: {"x": 0.05,"y": 0.6}
            font_size: 40
            hint_text: "â‚±0.00"


        TextInput:
            id: entry_name
            size_hint: 0.9, 0.18
            pos_hint: {"x": 0.05,"y": 0.4}
            hint_text: "New Income"
            multiline: False
            focus: True

        Button:
            size_hint: 0.5, 0.28
            pos_hint: {"x": 0.25, "y": 0.05}
            text: "Add"


<PopUpTotalBalance>:
    title: "Total Balance"
    size_hint: 0.8, None
    size: 0, 200
    on_open: root.total_balance()

    BoxLayout:
        orientation: "vertical"
        spacing: 10
        padding: 10

        Label:
            id: total_balance
            text: ""
            font_size: 28


<TitleLabel@Label>:
    canvas:
        Color:
            rgba: 1, 1, 1, 0.25
        Rectangle:
            pos: self.x, self.y
            size: self.size

<Entry>:
    canvas:
        Color:
            rgba: 1, 1, 1, 0.25
        Rectangle:
            pos: self.x, self.y
            size: self.size
    Label:


<HistoryScreen>
    entries_display: entries_display

    FloatLayout:
        size: root.width, root.height

        TitleLabel:
            text: "History"
            size_hint: 0.8, 0.08
            pos_hint: {"x": 0.1, "y": 0.91}

        ScrollView:
            do_scroll_x: False
            do_scroll_y: True
            size_hint: 0.7, 0.78
            pos_hint: {"x": 0.15, "y": 0.11}

            GridLayout:
                id: entries_display
                cols: 1
                spacing: 5
                size_hint_y: None
                row_default_height: '50dp'
                row_force_default: True

                Entry:

        Button:
            text: "Add"
            size_hint: 0.2, 0.08
            pos_hint: {"x": 0.3, "y": 0.01}
            on_release: root.request_add_entry()

        Button:
            text: "Total \nBalance"
            size_hint: 0.2, 0.08
            pos_hint: {"x": 0.5, "y": 0.01}
            on_release: root.view_total_balance()