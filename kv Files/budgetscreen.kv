#Popup for editing a budget
<PopupEditBudget>
    title: "Edit Budget"
    size_hint: 0.8, 0.4
    on_open: root.show_budget_info()
    on_dismiss: root.reset_inputs() 

    RelativeLayout:
        RelativeLayout:
            size_hint: 1, 0.7
            pos_hint: {"y": 0.3}

            ChooseNewIcon:
                id: choose_new_icon
                caller_widget: root
                size_hint: 0.25, 0.5
                pos_hint: {"x": 0.05, "y": 0.5}

            TextInput:
                id: budg_name
                text: ""
                multiline: False
                on_focus: budg_amt.append_zeroes()

                size_hint: 0.6, 0.25
                pos_hint: {"x": 0.35, "center_y": 0.75}

            Label:
                text: "₱"
                font_size: 40
                size_hint: 0.25, 0.5
                pos_hint: {"x": 0.05, "center_y": 0.25}

            AmountInput:
                id: budg_amt
                text: ""
                multiline: False

                prepend_peso: False
                adjust_font_size: False

                size_hint: 0.6, 0.25
                pos_hint: {"x": 0.35, "center_y": 0.25}

        Button:
            size_hint: 0.5, 0.28
            text: "Finish Edits!"
            on_press: budg_amt.append_zeroes()
            on_release: 
                root.edit_budget()
                root.single_update_bg_color()

            size_hint: 0.5, 0.25
            pos_hint: {"x": 0, "y": 0.05}

        #Delete button, asks for confirmation
        Button:
            size_hint: 0.5, 0.28
            text: "Delete"
            on_release: root.request_del_budget()

            size_hint: 0.5, 0.25
            pos_hint: {"x": 0.5, "y": 0.05}

#Popup for budget deletion confirmation
<PopupDeleteBudget>
    title: "Delete Budget"
    size_hint: 0.8, 0.4

    RelativeLayout:
        Label:
            text: "Are you sure you want \n to delete this budget?"
            color: (0.75, 0.47, 0.39, 1)
            pos_hint: {"y": 0.1}

        Button:
            size_hint: 0.5, 0.28
            text: "Yes"
            on_release: root.delete_budget()

            size_hint: 0.5, 0.25
            pos_hint: {"x": 0, "y": 0.05}

        Button:
            size_hint: 0.5, 0.28
            text: "No"
            on_release: root.return_to_edit()

            size_hint: 0.5, 0.25
            pos_hint: {"x": 0.5, "y": 0.05}

<ChooseNewIcon>
    Button:
        on_release: root.button_function()

        background_normal: "images/ui/circle_normal.png"
        background_down: "images/ui/circle_down.png"
        size_hint: 0.8, 0.8

    Image:
        id: icon
        source: "images/icons/Budgets/wallet_medium.png"
        size_hint: 0.8, 0.8


<PopupChooseIcon>
    icon_grid: icon_grid

    title: "Choose Budget Icon"
    size_hint: 1, 1

    ScrollView:
        do_scroll_x: False
        do_scroll_y: True
        size_hint: 1, 1

        GridLayout:
            id: icon_grid
            cols: 3

            size_hint_y: None
            col_force_default: True
            row_force_default: True
            col_default_width: self.parent.width/3
            row_default_height: self.parent.width/3

<BudgetIcon>
    Button:
        on_release: root.button_function()

        background_normal: "images/ui/circle_normal.png"
        background_down: "images/ui/circle_down.png"
        size_hint: 0.8, 0.8

    Image:
        id: icon
        source: "images/icons/Budgets/wallet_medium.png"
        size_hint: 0.8, 0.8

#Popup for adding a budget
<PopupAddBudget>
    title: "Add Budget"
    size_hint: 0.8, 0.4
    on_dismiss: root.reset_inputs()

    RelativeLayout:
        RelativeLayout:
            size_hint: 1, 0.7
            pos_hint: {"y": 0.3}

            ChooseIcon:
                id: choose_icon
                caller_widget: root
                size_hint: 0.25, 0.5
                pos_hint: {"x": 0.05, "y": 0.5}

            TextInput:
                id: budget_name
                hint_text: "New Budget"
                multiline: False

                size_hint: 0.6, 0.25
                pos_hint: {"x": 0.35, "center_y": 0.75}

            Label:
                text: "₱"
                font_size: 40
                size_hint: 0.25, 0.5
                pos_hint: {"x": 0.05, "center_y": 0.25}

            AmountInput:
                id: budget_amount
                hint_text: "Amount"
                multiline: False

                prepend_peso: False
                adjust_font_size: False

                size_hint: 0.6, 0.25
                pos_hint: {"x": 0.35, "center_y": 0.25}

        Button:
            size_hint: 0.5, 0.28
            text: "Add"
            on_press: budget_amount.append_zeroes()
            on_release: root.add_budget()

            size_hint: 0.5, 0.25
            pos_hint: {"x": 0.25, "y": 0.05}

<ChooseIcon>
    Button:
        on_release: root.button_function()

        background_normal: "images/ui/circle_normal.png"
        background_down: "images/ui/circle_down.png"
        size_hint: 0.8, 0.8

    Image:
        id: icon
        source: "images/icons/Budgets/wallet_medium.png"
        size_hint: 0.8, 0.8


<AddBudgetButton>
    Button:
        on_release: root.button_function()
        background_normal: "images/ui/square_normal.png"
        background_down: "images/ui/square_down.png"
        size_hint: 0.8, 0.8

    Image:
        source: "images/ui/add.png"
        size_hint: 0.8, 0.8


<Budget>
    Button:
    	id: background
        on_release: root.button_function()
        #background normal features color indicator, can be found at python file
        background_down: "images/ui/circle_down.png"	

        size_hint: 0.9, 0.9

    Image:
        id: icon
        source: "images/icons/Budgets/wallet_medium.png"
        size_hint: 1, 1

<BudgetDisplay@RelativeLayout>
    canvas.before:
        Color:
            rgba: 1, 1, 1, 0.15
        Rectangle:
            size: self.size

    Label:
        id: budget_remaining
        text: "₱0.00"
        multiline: False
        font_size: 40
        text_size: self.size
        halign: "left"
        valign: "middle"

        pos_hint: {"x": 0.1, "center_y": 0.75}

    Label:
        text: "Remaining"
        font_size: 12
        text_size: self.size
        halign: "left"
        valign: "middle"

        pos_hint: {"x": 0.1, "center_y": 0.55}

    Label:
        id: budget_total
        text: "₱0.00"
        font_size: 20
        text_size: self.size
        halign: "left"
        valign: "middle"

        pos_hint: {"x": 0.1, "center_y": 0.4}

    Label:
        text: "Total"
        font_size: 12
        text_size: self.size
        halign: "left"
        valign: "middle"

        pos_hint: {"x": 0.1, "center_y": 0.25}

    Label:
        id: budget_name
        text: "Daily Budget"
        bold: True

        pos_hint: {"center_y": 0.1}
    
    Button:
        text: "Edit"
        font_size: 12
        text_size: self.size
        halign: "center"

        pos_hint: {"x": 0.9, "center_y": 0.9}
        size_hint: 0.04, 0.1
        


        on_press: root.root.view_edit_budget()

#Budget screen widget
<BudgetScreen>
    #every time user enters budgetscreen, update bg colors of all budgets
    on_enter: root.update_bg_color()
    budgets_grid: budgets_grid

    FloatLayout:
        size: root.width, root.height

        #adds a grey toolbar at upper side of the screen
        ToolBar:
            id: budgets_toolbar
            size_hint: 1, 0.14
            pos_hint: {"y": 0.86}

            Label:
                id: active_date
                text: "01 January 2021"

                pos_hint: {"center_y": 0.2}

        # Current Budget Display
        BudgetDisplay:
            id: budget_display
            size_hint: 0.8, 0.25
            pos_hint: {"x": 0.1, "y": 0.59}
            root: root
           
        # Budget Grid
        ScrollView:
            do_scroll_x: False
            do_scroll_y: True
            size_hint: 0.9, 0.48
            pos_hint: {"x": 0.05, "y": 0.11}

            canvas.before:
                Color:
                    rgba: 1, 1, 1, 0.25
                Rectangle:
                    pos: self.x, self.y
                    size: self.size

            GridLayout:
                id: budgets_grid
                cols: 3

                size_hint_y: None
                col_force_default: True
                row_force_default: True
                col_default_width: self.parent.width/3
                row_default_height: self.parent.width/3

                AddBudgetButton:
                    caller_widget: root

        NavigationBar:
            size_hint: 1, 0.08


