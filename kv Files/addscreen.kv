# Custom widget for each entry
# uses a name and an amount variable
<Entry>:
    RelativeLayout:
        pos: root.x, root.y
        width: root.width
        height: root.height

        Button:
            on_release: root.press()

        Label:
            id: entry_name

            size_hint: 0.38, 1
            pos_hint: {"x": 0.05}
            text_size: self.size
            halign: "left"
            valign: "middle"

        Label:
            id: entry_display_amount

            size_hint: 0.48, 1
            pos_hint: {"right": 0.95}
            text_size: self.size
            halign: "right"
            valign: "middle"

<GlobalAdd>
    on_enter: root.request_add_entry()
    FloatLayout:
        size: root.width, root.height

        NavigationBar:
            size_hint: 1, 0.08