<PopUpClickEntryIncome@PopUpClickEntry>:
    title: "INCOME"

<PopUpClickEntryExpense@PopUpClickEntry>:
    title: "EXPENSE"

# Popup for clicking Entry 
<PopUpClickEntry>:
    size_hint: 0.8, 0.29

    on_open: root.update_entry_info()
    RelativeLayout:
        Image:
            source: "images/ui/circle_icon_border.png"
            size_hint: 1, 0.8
            pos_hint: {"y": 1}

        Image:
            id: entry_icon
            source: "images/icons/Budgets/wallet_icon.png"
            size_hint: 1, 0.8
            pos_hint: {"y": 1}

        BoxLayout:
            orientation: "vertical"
            spacing: 10
            padding: 8

            # Label:
            #     id: ent_type
            #     text: ""
            #     halign: 'center'
            #     valign: 'center'
            #     font_size: 24

            Label:
                id: ent_name
                text: ""
                halign: 'center'
                valign: 'center'
                font_size: 24

            Label:
                id: ent_amt
                text: ""
                halign: 'center'
                valign: 'center'
                font_size: 24

            Label:
                id:category_name
                text: ""
                halign: 'center'
                valign: 'center'
                font_size: 24

            Button:
                text: "Edit Entry"
                on_release: root.request_edit_entry()


# Popup for choosing between "Income" and "Expense"
<PopUpChooseEntry>:
    on_dismiss: app.go_to_history()
    title: "Add Entry"

    size_hint: 0.8, 0.42

    BoxLayout:
        orientation: "vertical"
        spacing: 10
        padding: 10

        Button:
            text: "Income"
            on_release: root.choose_income()

        Button:
            text: "Expense"
            on_release: root.choose_expense()


# Custom AmountInput widget featuring a green color scheme
<IncomeAmountInput@AmountInput>
    foreground_color: 0.75, 0.86, 0.57, 1
    background_color: 0.22, 0.48, 0.3, 1
    cursor_color: 0.75, 0.86, 0.57, 1
    hint_text_color: 0.47, 0.75, 0.39, 1
    multiline: False
    focus: True
    input_type: "number"


# Popup that lets user input an amount and name for an income entry
<PopupAddIncome>
    title: "Add Income"
    on_dismiss: 
        root.reset_inputs()
        app.go_to_history()

    size_hint: 0.8, 0.42

    RelativeLayout:
        IncomeAmountInput:
            id: entry_amount
            hint_text: "₱0.00"

            size_hint: 0.9, 0.3
            pos_hint: {"x": 0.05,"y": 0.7}
            font_size: 40

        EntryNameInput:
            id: entry_name
            hint_text: "New Income"
            on_focus: entry_amount.append_zeroes()

            size_hint: 0.9, 0.18
            pos_hint: {"x": 0.05,"y": 0.5}
            multiline: False
            focus: True

        Button:
            text: "Add"
            on_press: entry_amount.append_zeroes()
            on_release: root.add_income_entry()

            size_hint: 0.5, 0.28
            pos_hint: {"x": 0.25, "y": 0.05}

# Custom AmountInput widget featuring a green color scheme
<ExpenseAmountInput@AmountInput>
    foreground_color: 0.86, 0.57, 0.6, 1
    background_color: 0.63, 0.22, 0.24, 1
    cursor_color: 0.86, 0.57, 0.6, 1
    hint_text_color: 0.94, 0.35, 0.39, 1
    multiline: False
    focus: True
    input_type: "number"


# Popup that lets user input an amount and name for an expense entry
<PopupAddExpense>
    title: "Add Expense"
    on_dismiss: 
        root.reset_inputs()
        app.go_to_history()

    size_hint: 0.8, 0.42

    RelativeLayout:
        ExpenseAmountInput:
            id: entry_amount
            hint_text: "₱0.00"

            size_hint: 0.9, 0.30
            pos_hint: {"x": 0.05,"y": 0.7}
            font_size: 40

        EntryNameInput:
            id: entry_name
            hint_text: "New Expense"
            on_focus: entry_amount.append_zeroes()

            size_hint: 0.9, 0.18
            pos_hint: {"x": 0.05,"y": 0.5}
            multiline: False
            focus: True

        Button:
            id: category_name
            text: "Choose Category"
            on_release: root.choose_category()
            size_hint: 0.9, 0.15
            pos_hint: {"x": 0.05, "y": 0.3}

        Button:
            text: "Add"
            on_press: entry_amount.append_zeroes()
            on_release: root.add_expense_entry()

            size_hint: 0.5, 0.20
            pos_hint: {"x": 0.25, "y": 0.05}


# Popup that lets the user pick which budget category to pair the entry with
<PopupSelectCategory>
    categories_grid: categories_grid

    title: "Select Category"
    on_open: root.update_categories()

    size_hint: 0.8, 0.42

    # Category Grid
    ScrollView:
        do_scroll_x: False
        do_scroll_y: True

        size_hint: 1, 0.9
        pos_hint: {"y": 0.05}

        #size: root.width, root.height

        GridLayout:
            id: categories_grid
            cols: 1
            spacing: 5

            size_hint_y: None
            col_force_default: True
            row_force_default: True
            col_default_width: self.parent.width
            # row_default_height: self.parent.width/3

            row_default_height: '60dp'
            row_force_default: True

# Custom widget for each category
<Category>:
    RelativeLayout:
        pos: root.x, root.y
        width: root.width
        height: root.height

        Button:
            on_release: root.press()

        Image:
            id: icon
            source: "images/icons/Budgets/wallet_icon.png"
            size_hint: 0.25, 0.8
            pos_hint: {"y": 0.1}

        Label:
            id: category_name

            size_hint: 0.75, 1
            pos_hint: {"x": 0.25}
            text_size: self.size
            halign: "left"
            valign: "middle"

# Custom widget for each entry
# uses a name and an amount variable
<Entry>:
    RelativeLayout:
        pos: root.x, root.y
        width: root.width
        height: root.height

        RelativeLayout:
            id: icon_layout
            size_hint: None, 1
            size: self.height, self.height

            Image:
                id: entry_icon
                source: "images/icons/income_icon.png"
                pos_hint: {"center_x": 0.5, "center_y": 0.5}

        RelativeLayout:
            id: button_layout
            size_hint: None, None
            size: root.width - (icon_layout.width + 5), root.height
            pos: icon_layout.width + 5, self.y

            Button:
                id: entry_button
                on_release: root.press()

            Label:
                id: entry_name

                size_hint: 0.9, 1
                pos_hint: {"x": 0.05, "y": 0.6}
                #size_hint: 0.38, 1

                text_size: self.size
                halign: "left"
                valign: "bottom"

            Label:
                id: entry_display_amount

                font_size: 22
                bold: True
                size_hint: 0.9, 1
                pos_hint: {"x": 0.05, "y": 0.1}

                #size_hint: 0.48, 1
                #pos_hint: {"right": 0.95}
                text_size: self.size
                halign: "left"
                valign: "bottom"


#Adding an expense can now be done anywhere through the navigation bar
<GlobalAdd>
    on_enter: root.request_add_entry()
    FloatLayout:
        size: root.width, root.height

        NavigationBar:
            size_hint: 1, 0.08
