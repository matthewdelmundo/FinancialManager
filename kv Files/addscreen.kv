# Popup for clicking Entry 
<PopUpClickEntry>:
    title: "Entry"
    size_hint: 0.8, None
    size: 0, 200
    on_open: root.update_entry_info()

    BoxLayout:
        orientation: "vertical"
        spacing: 10
        padding: 8

        Label:
            id: ent_type
            text: ""
            halign: 'center'
            valign: 'center'
            font_size: 24

        Label:
            id: ent_name
            text: ""
            halign: 'center'
            valign: 'center'
            font_size: 24

        Label:
            id: ent_amt
            text: ""
            halign: 'center'
            valign: 'center'
            font_size: 24
    
        Button:
            text: "Edit Entry"
            on_release: root.request_edit_entry()


# Popup for choosing between "Income" and "Expense"
<PopUpChooseEntry>:
    on_dismiss: app.root.current = 'history'
    title: "Add Entry"

    size_hint: 0.8, None
    size: 0, 200

    BoxLayout:
        orientation: "vertical"
        spacing: 10
        padding: 10

        Button:
            text: "Income"
            on_release: root.choose_income()

        Button:
            text: "Expense"
            on_release: root.choose_expense()


# Custom AmountInput widget featuring a green color scheme
<IncomeAmountInput@AmountInput>
    foreground_color: 0.75, 0.86, 0.57, 1
    background_color: 0.22, 0.48, 0.3, 1
    cursor_color: 0.75, 0.86, 0.57, 1
    hint_text_color: 0.47, 0.75, 0.39, 1
    multiline: False
    focus: True
    input_type: "number"


# Popup that lets user input an amount and name for an entry
<PopupAddIncome>
    title: "Add Income"
    on_dismiss: 
        root.reset_inputs()
        app.root.current = 'history'

    size_hint: 0.8, None
    size: 0, 250

    RelativeLayout:
        IncomeAmountInput:
            id: entry_amount
            hint_text: "₱0.00"

            size_hint: 0.9, 0.38
            pos_hint: {"x": 0.05,"y": 0.6}
            font_size: 40

        EntryNameInput:
            id: entry_name
            hint_text: "New Income"
            on_focus: entry_amount.append_zeroes()

            size_hint: 0.9, 0.18
            pos_hint: {"x": 0.05,"y": 0.4}
            multiline: False
            focus: True

        Button:
            text: "Add"
            on_press: entry_amount.append_zeroes()
            on_release: root.add_income_entry()

            size_hint: 0.5, 0.28
            pos_hint: {"x": 0.25, "y": 0.05}

# Custom AmountInput widget featuring a green color scheme
<ExpenseAmountInput@AmountInput>
