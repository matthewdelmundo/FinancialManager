# Custom Label for the screen title
<TitleLabel@Label>:
    canvas:
        Color:
            rgba: 1, 1, 1, 0.25
        Rectangle:
            pos: self.x, self.y
            size: self.size

<ToolBar_NoColor@RelativeLayout>:
    Label:
        id: title
        font_size: 20
        bold: True

        pos_hint: {"center_y": 0.6}

<ToolBar@RelativeLayout>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 0.25
        Rectangle:
            size: self.size

    Label:
        id: title
        font_size: 20
        bold: True

        pos_hint: {"center_y": 0.6}

<NavigationBar@RelativeLayout>:
    canvas:
        Color:
            rgba: 1, 1, 1, 0.25
        Rectangle:
            size: self.size
            
    #when a navigation button is pressed, it goes to that screen
    Button:
        text: ""
        size_hint: 0.2, 1
        pos_hint: {"x":0}
        on_release:
            app.go_to_home()

    Image:
        source: "images/icons/home_small.png"
        size_hint: 0.2, 0.7
        pos_hint: {"x": 0, "y": 0.35}

    Label:
        text: "Home"
        size_hint: 0.2, 1
        pos_hint: {"x": 0, "y": -0.25}

    Button:
        text: ""
        size_hint: 0.2, 1
        pos_hint: {"x":.2}
        on_release: 
            app.go_to_budget()

    Image:
        source: "images/icons/wallet_small.png"
        size_hint: 0.2, 0.7
        pos_hint: {"x": 0.2, "y": 0.35}

    Label:
        text: "Budgets"
        size_hint: 0.2, 1
        pos_hint: {"x": 0.2, "y": -0.25}

    Button:
        text: ""
        size_hint: 0.2, 1
        pos_hint: {"x":.4}
        on_release: 
            app.go_to_history()

    Image:
        source: "images/icons/scroll_small.png"
        size_hint: 0.2, 0.7
        pos_hint: {"x": 0.4, "y": 0.35}

    Label:
        text: "History"
        size_hint: 0.2, 1
        pos_hint: {"x": 0.4, "y": -0.25}

    Button:
        text: ""
        size_hint: 0.2, 1
        pos_hint: {"x":.6} 
        on_release: 
            app.go_to_overview()

    Image:
        source: "images/icons/magnifyingglass_small.png"
        size_hint: 0.2, 0.7
        pos_hint: {"x": 0.6, "y": 0.35}

    Label:
        text: "Overview"
        size_hint: 0.2, 1
        pos_hint: {"x": 0.6, "y": -0.25}

    Button:
        text: ""
        size_hint: 0.2, 1
        pos_hint: {"x":.8}
        on_release:
            app.go_to_add()

    Image:
        source: "images/icons/add_small.png"
        size_hint: 0.2, 0.7
        pos_hint: {"x": 0.8, "y": 0.35}

    Label:
        text: "Add"
        size_hint: 0.2, 1
        pos_hint: {"x": 0.8, "y": -0.25}

<CircularButton>
    background_color: 0, 0, 0, 0
    background_normal: ''

    bg_color_normal: 1, 1, 1, 0.15
    bg_color_down: 1, 1, 1, 0.1

    color: self.bg_color_normal

    on_press: root.button_pressed()
    on_release: root.button_released()

    canvas.before:
        Color:
            rgba: self.color
        Ellipse:
            size: self.size
            pos: self.pos

<RoundedButton>
    background_color: 0, 0, 0, 0
    background_normal: ''

    bg_color_normal: 1, 1, 1, 0.15
    bg_color_down: 1, 1, 1, 0.1
    border_radius: [20]

    color: self.bg_color_normal

    on_press: root.button_pressed()
    on_release: root.button_released()

    canvas.before:
        Color:
            rgba: self.color
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: self.border_radius

<ImageButton>
    background_normal: ''
    image_down: "images/icons/Budgets/wallet_medium.png"
    image_normal: "images/add.png"

