#Popup for deleting an entry
<PopUpDeleteEntry>:
    title: "Delete Entry"
    
    size_hint: 0.8, 0.4

    RelativeLayout:
        Label:
            text: "Are you sure you want \n to delete this entry?"
            color: (0.75, 0.47, 0.39, 1)
            pos_hint: {"y": 0.1}

        Button:
            text: "Yes"
            size_hint: 0.5, 0.28    
            on_press: root.delete_entry()

            size_hint: 0.5, 0.25   
            pos_hint: {"x": 0, "y": 0.05}

        Button:
            text: "No"
            size_hint: 0.5, 0.28
            on_press: root.return_to_edit()  

            size_hint: 0.5, 0.25   
            pos_hint: {"x": 0.5, "y": 0.05}

#Popup for editing an income entry
<PopUpEditEntryIncome>:
    title: "Edit Entry"
    on_open: root.update_edit_entry_info()
    on_dismiss: root.reset_inputs() #!!!!!!

    size_hint: 0.8, None
    size: 0, 300

    RelativeLayout:
        Label:
            id: ent_type
            text: ""
            halign: 'center'
            valign: 'center'
            pos_hint: {"x": 0.05,"y": 0.8}
            font_size: 24

        EditAmountInputIncome:
            id: ent_amt
            text: ""

            size_hint: 0.9, 0.38
            pos_hint: {"x": 0.05,"y": 0.6}
            font_size: 34

        EditNameInput:
            id: ent_name
            text: ""
            on_focus: ent_amt.append_zeroes()

            size_hint: 0.9, 0.18
            pos_hint: {"x": 0.05,"y": 0.4}
            multiline: False
            focus: True

        Button:
            text: "Finish Edits!"
            on_press: ent_amt.append_zeroes()
            on_release: root.edit_entry()

            size_hint: 0.5, 0.28
            pos_hint: {"x": 0, "y": 0.05}
        
        Button:
            size_hint: 0.5, 0.28
            pos_hint: {"x": 0.5, "y": 0.05}
            text: "Delete Entry!"
            on_release: root.request_del_entry()
 
