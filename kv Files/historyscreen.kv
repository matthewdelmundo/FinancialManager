# Popup that lets user input an amount and name for an entry
<PopupEditCategory>
    categories_grid: categories_grid

    title: "Select Category"
    on_open: 
        root.update_categories()
    on_dismiss: root.return_to_edit()    

    size_hint: 0.8, None
    size: 0, 250

    # Category Grid
    ScrollView:
        do_scroll_x: False
        do_scroll_y: True
        size: root.width, root.height
        # pos_hint: {"x": 0.05, "y": 0.05}

        GridLayout:
            id: categories_grid
            cols: 1
            spacing: 5
            
            size_hint_y: None
            col_force_default: True
            row_force_default: True
            col_default_width: self.parent.width
            # row_default_height: self.parent.width/3

            row_default_height: '60dp'
            row_force_default: True


# Main screen for displaying entry history
<HistoryScreen>
    entries_grid: entries_grid

    FloatLayout:
        id: history_screen
        size: root.width, root.height

        ToolBar:
            id: budgets_toolbar
            size_hint: 1, 0.14
            pos_hint: {"y": 0.86}

            Label:
                id: active_date
                text: "01 January 2021"

                pos_hint: {"center_y": 0.2}

            DatePickerButton:
                id: date_picker
                text: "Date"

                size_hint: None, 0.8
                width: self.height
                pos_hint: {"right": 0.95, "center_y": 0.5}

        ScrollView:
            do_scroll_x: False
            do_scroll_y: True
            size_hint: 0.7, 0.63
            pos_hint: {"x": 0.15, "y": 0.21}

            GridLayout:
                id: entries_grid
                cols: 1
                spacing: 5

                size_hint_y: None
                row_default_height: '60dp'
                row_force_default: True

        Button:
            text: "Clear"
            on_release: root.clear_entries()
            #on_release: root.view_total_balance()

            size_hint: 0.4, 0.08
            pos_hint: {"x": 0.3, "y": 0.11}

        NavigationBar:
            size_hint: 1, 0.08
