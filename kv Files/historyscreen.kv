<PopUpEditEntryIncome>:
    title: "Edit Entry"
    on_open: root.update_edit_entry_info()
    on_dismiss: root.reset_inputs() #!!!!!!

    size_hint: 0.8, None
    size: 0, 300

    RelativeLayout:
        Label:
            id: ent_type
            text: ""
            halign: 'center'
            valign: 'center'
            pos_hint: {"x": 0.05,"y": 0.8}
            font_size: 24

        EditAmountInputIncome:
            id: ent_amt
            text: ""

            size_hint: 0.9, 0.38
            pos_hint: {"x": 0.05,"y": 0.6}
            font_size: 34

        EditNameInput:
            id: ent_name
            text: ""
            on_focus: ent_amt.append_zeroes()

            size_hint: 0.9, 0.18
            pos_hint: {"x": 0.05,"y": 0.4}
            multiline: False
            focus: True

        Button:
            text: "Finish!"
            on_press: ent_amt.append_zeroes()
            on_release: root.edit_entry()

            size_hint: 0.5, 0.28
            pos_hint: {"x": 0.25, "y": 0.05}

