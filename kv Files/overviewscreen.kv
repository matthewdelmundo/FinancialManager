# Custom widget for each expense category
<ExpenseSummary>:
    size_hint: None, None
    StackLayout:
        id: summary_grid

        canvas.before:
            Color:
                rgba: 1, 1, 1, 0.15
            Rectangle:
                size: self.size

<ExpenseSummaryTitle>
    size_hint: None, None
    Label:
        text: "Expense Summary"
        bold: True

<ExpenseInfo>:
    size_hint: None, None
    Label:
        id: expense_name
        text: "Test"

        font_size: 16
        text_size: self.size
        halign: "left"
        valign: "middle"

        pos_hint: {"x": 0.05}

    Label:
        id: expense_amount
        text: "P100.00"
        color: 0.94, 0.35, 0.39, 1

        font_size: 16
        text_size: self.size
        halign: "right"
        valign: "middle"

        pos_hint: {"right": 0.95}
            
<TotalValues>
    size_hint: None, None
    canvas.before:
        Color:
            rgba: 1, 1, 1, 0.15
        Rectangle:
            size: self.size

    Label:
        text: "Total Income"
        pos_hint: {"x": 0.05, "top": 0.9}
        text_size: self.size
        halign: "left"
        valign: "top"

    Label:
        id: total_income
        text: "₱0.00"
        multiline: False
        pos_hint: {"x": -0.05, "top": 0.9}
        text_size: self.size
        halign: "right"
        valign: "top"
        color: 0.47, 0.75, 0.39, 1

    Label:
        text: "Total Expense"
        pos_hint: {"x": 0.05}
        text_size: self.size
        halign: "left"
        valign: "middle"

    Label:
        id: total_expense
        text: "₱0.00"
        multiline: False
        pos_hint: {"x": -0.05}
        text_size: self.size
        halign: "right"
        valign: "middle"
        color: 0.94, 0.35, 0.39, 1

    Label:
        text: "Net Income"
        pos_hint: {"x": 0.05, "y": 0.1}
        text_size: self.size
        halign: "left"
        valign: "bottom"

    Label:
        id: net_income
        bold: True
        text: "₱0.00"
        multiline: False
        pos_hint: {"x": -0.05, "y": 0.1}
        text_size: self.size
        halign: "right"
        valign: "bottom"

# Overview screen widget for displaying spending breakdown
<OverviewScreen>
    overviews_grid: overviews_grid

    FloatLayout:
        size: root.width, root.height

        #adds a grey toolbar at upper side of the screen
        ToolBar:
            id: overview_toolbar
            size_hint: 1, 0.14
            pos_hint: {"y": 0.86}

            Label:
                id: active_date
                text: "01 January 2021"

                pos_hint: {"center_y": 0.2}

        ScrollView:
            id: scroll_view
            do_scroll_x: False
            do_scroll_y: True
            size_hint: 0.7, 0.73
            pos_hint: {"x": 0.15, "y": 0.11}

            StackLayout:
                id: overviews_grid

                spacing: [0, 10]
                size_hint_y: None

        NavigationBar:
            size_hint: 1, 0.08
